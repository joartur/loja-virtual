{{#if errors}}
    <div class="alert alert-danger">
        {{#each errors}}
            <p>{{this.msg}}</p>
        {{/each}}
    </div>
{{/if}}

{{#if flash.message}}
    <div class="alert alert-info">
        {{flash.message}}
    </div>
{{/if}}

